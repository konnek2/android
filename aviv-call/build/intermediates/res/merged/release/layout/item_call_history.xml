<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/call_LogParent"
        style="@style/ListItem"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/call_status"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_call_uparrow"
            android:visibility="visible"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/call_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:text=" Rajesh kumar"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/call_priority"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/call_userName"
                android:src="@drawable/ic_call_high_priority"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/call_LogDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/call_priority"
                android:layout_marginLeft="5dp"
                android:layout_below="@+id/call_userName"
                android:layout_marginTop="5dp"
                android:text=" Date"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/call_LogTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_userName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/call_LogDate"
                android:text=" Time"
                android:textSize="12sp"/>

            <ImageView
                android:id="@+id/Image_call_type"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_call_audiocall"
                android:visibility="visible"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>