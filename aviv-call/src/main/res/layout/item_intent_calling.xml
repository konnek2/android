<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_layout_border"
        android:orientation="vertical"
        android:padding="1dp">


        <TextView
            android:id="@+id/TxtHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="Select Call Priority"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/intentCalling_progress"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/PriorityGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp">

            <RadioButton
                android:id="@+id/HighPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Priority"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/MediumPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Priority"
                android:textColor="@color/colorPrimary" />


            <RadioButton
                android:id="@+id/LowPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Priority"
                android:textColor="@color/colorPrimary" />

            <RadioButton
                android:id="@+id/Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:visibility="gone"
                android:textColor="@color/colorPrimary">

            </RadioButton>

        </RadioGroup>

        <EditText
            android:id="@+id/otherEtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/RadioOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background_change"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="4dp"
                android:text="OK"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/RadioCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_background_change"
                android:paddingBottom="4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="Cancel"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>