<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >


        <TextView
            android:id="@+id/TxtHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="3dp"
            android:text="Select Call Priority"
            android:textColor="@color/white"/>

        <ProgressBar
            android:id="@+id/intentCalling_progress"
            style="@style/Base.Widget.AppCompat.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="gone"/>

        <RadioGroup
            android:id="@+id/PriorityGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp">

            <RadioButton
                android:id="@+id/HighPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="High Priority"
                android:textColor="@color/priority_high"/>

            <RadioButton
                android:id="@+id/MediumPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium Priority"
                android:textColor="@color/priority_medium"/>


            <RadioButton
                android:id="@+id/LowPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Low Priority"
                android:textColor="@color/priority_low"/>

            <RadioButton
                android:id="@+id/Others"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textColor="@color/colorPrimary"
                android:visibility="gone">

            </RadioButton>

        </RadioGroup>

        <EditText
            android:id="@+id/otherEtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_marginTop="3dp"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/RadioOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background_change"
                android:gravity="center"
                android:padding="@dimen/padding_5dp"
                android:text="OK"
                android:textColor="@color/white"/>

            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:background="#FF0000FF"/>

            <TextView
                android:id="@+id/RadioCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_background_change"
                android:gravity="center"
                android:padding="@dimen/padding_5dp"
                android:text="Cancel"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>