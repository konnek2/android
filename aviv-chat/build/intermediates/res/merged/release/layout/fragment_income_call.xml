<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/fragmentIncomeCall"
                style="@style/MatchParent"
                android:background="@drawable/ic_call_background">


    <LinearLayout
        android:id="@+id/layout_info_about_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/also_in_call_text_left_right_"
        android:paddingRight="@dimen/also_in_call_text_left_right_">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_caller_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:padding="5dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_launcher"/>


            <TextView
                android:id="@+id/callStatus"
                style="@style/WrapContent"
                android:layout_marginLeft="@dimen/margin_5dp"
                android:gravity="center"
                android:text="Konnek2"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>


        <TextView
            android:id="@+id/text_caller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/caller_name_text_size"
            />

        <TextView
            android:id="@+id/call_type"
            style="@style/WrapContent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/white"
            android:textSize="@dimen/incoming_call_type_text_size"/>


        <TextView
            android:id="@+id/text_also_on_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_35dp"
            android:text="@string/also_on_call"
            android:textColor="@color/white"
            android:textSize="@dimen/also_on_call_text_size"/>

        <TextView
            android:id="@+id/text_other_inc_users"
            style="@style/WrapContent"
            android:layout_marginTop="@dimen/margin_15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/incoming_call_type_text_size_18sp"
            tools:text="@string/user_list_on_call"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_30dp"
        android:layout_marginLeft="@dimen/margin_10dp"
        android:layout_marginRight="@dimen/margin_10dp"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/image_button_reject_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_call_phone_deline"/>

        <ImageButton
            android:id="@+id/image_button_accept_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_call_phone_answer"/>

    </LinearLayout>

</RelativeLayout>